set nocompatible
syntax enable
set encoding=utf8

filetype plugin on
filetype indent on

set nu
set relativenumber

set wildmenu
set so=8
set ai
set si
set wrap

set smartcase
set hlsearch

set noundofile
set nobackup
set noswapfile

let mapleader = " "
map <leader>rv :e! ~/.vimrc<cr>
map <leader>pv :Ex<cr>
map <leader>tn :tabnew<cr>
map <leader>tc :tabclose<cr>
map <leader>ss :split<cr>
map <leader>vs :vsplit<cr>

