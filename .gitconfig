[alias]
	aliases = config --get-regexp alias
	s = status -s
	p = pull --recurse-submodules
	c = clone --recursive
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	# Switch to a branch, creating it if necessary
	go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
	branches = branch --all
	whoami = config user.email

[branch]
	sort = -committerdate

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[diff]
	renames = copies

[merge]
	log = true

[push]
	default = simple
	followTags = true

[init]
	defaultBranch = main
